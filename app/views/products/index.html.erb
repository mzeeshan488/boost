
<div class="container">
<h1>Products</h2>
<table class="table">
<% @products.each do|std|%>
<tr>
<td><%= std.title%></td>
<td><%= button_to "Details",product_path(std),method:'get', class:"btn btn-primary"%></td>
<td><%= button_to "Edit", edit_product_path(std), method:'get',class:"btn btn-secondary" %></td>
<td><%= button_to "Delete", product_path(std), method:'delete', data:{confirm:"Please confirm"},class:"btn btn-danger" %></td>
</tr>
<%end%>
</table>
<%= link_to "Add product", new_product_path, class:"btn btn-success"%>
<%= link_to "Download", export_products_path(format: :xls),class:"btn btn-info"%>
</div>
