<div class="row py-5">
   <div class="col-lg-4 mx-auto">
        <section class="d-flex justify-content-center mt-5 mb-5">
          <span class="text-capitalize text-white bg-dark px-2 py-1 rounded">
           <h3>Update Product</h3>
          </span>
        </section>
          <div class="container">
             <div class="field mt-5">
                <%= form_with model: @product do |f|%>
                     <%= f.text_field :title ,placeholder:"Enter product title",class:"form-control py-2" %> <br><br>
                     <%= f.text_field :description, placeholder:"Enter Description",class:"form-control py-2" %> <br><br>
                     <%= f.submit "Update",class:"form-control py-2 btn btn-success fw-bold shadow" %>
                    <%end%>
             </div>
            </div>
    </div>
</div>